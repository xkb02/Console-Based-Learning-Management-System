<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.guiLMS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.guiLMS"
    xmlns:local2="clr-namespace:MAUI.guiLMS.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI.guiLMS">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Instructor"
        ContentTemplate="{DataTemplate local2:InstructorView}"
        Route="Instructor" />
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentView}"
        Route="Student" />
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local2:PersonDetailView}"
        Route="PersonDetail" />

</Shell>
